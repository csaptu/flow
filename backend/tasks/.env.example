# Database
DATABASE_URL=postgres://user:pass@localhost:5432/flow_tasks?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# LLM Configuration (choose one provider)
LLM_DEFAULT_PROVIDER=openai

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_PROJECT_ID=proj-xxx  # Optional

# OR Anthropic (https://console.anthropic.com/)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# OR Google Gemini (https://aistudio.google.com/app/apikey)
# GOOGLE_API_KEY=your-google-api-key

# OR Ollama (local, no API key needed)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.2
